{
  "name": "frontend_dl",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test:e2e": "playwright test --reporter=html",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "PWDEBUG=1 playwright test",
    "test:e2e:ci": "playwright test --reporter=line",
    "test:e2e:install": "npx playwright install --with-deps",
    "test:e2e:report": "playwright show-report",
    "test:e2e:auth": "playwright test --reporter=html --grep=@auth",
    "test:e2e:no-auth": "playwright test --reporter=html --grep=@no-auth",
    "perf:check": "npm run perf:lighthouse && npm run perf:bundle && npm run perf:visual",
    "perf:lighthouse": "node scripts/lighthouse-check.js",
    "perf:bundle": "npm run build -- --profile && node scripts/bundle-check.js",
    "perf:visual": "playwright test tests/visual/",
    "a11y:check": "playwright test tests/a11y/",
    "visual:test": "playwright test tests/visual/",
    "bundle:budget": "npm run build -- --profile && node scripts/bundle-check.js",
    "perf:all": "node scripts/run-all-perf-tests.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chrome-launcher": "^1.2.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.18.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.292.0",
    "next": "^13.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.11.0",
    "recharts": "^2.15.4",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^13.5.11",
    "@playwright/test": "^1.40.0",
    "@types/node": "^16.11.11",
    "@types/react": "^17.0.37",
    "autoprefixer": "^10.4.0",
    "axe-core": "^4.10.3",
    "concurrently": "^9.2.0",
    "lighthouse": "^12.8.1",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.5.2"
  },
  "perf": {
    "lighthouse": {
      "performance": 85,
      "accessibility": 95,
      "best-practices": 95,
      "seo": 95,
      "cls": 0.1,
      "lcp": 3000
    },
    "bundle": {
      "maxChunkSize": 250000
    },
    "visual": {
      "maxDiffPixelRatio": 0.01
    }
  }
}
